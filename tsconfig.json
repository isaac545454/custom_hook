{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "paths": {
        "@components/*": ["./src/components/*"],
        "@hooks/*": [
          "./src/hooks/*"
        ],
        "@infra": [
          "./src/infra/index.ts"
        ],
        "@models/*": [
          "./src/models/*"
        ],
        "@AppRouter": [
          "./src/AppRouter/index.ts"
        ],
        "@pages/*": ["./src/pages/*"],
        "@template": [
          "./src/template/index.ts"
        ]
      },
      "lib": [
        "ES2020",
        "DOM",
        "DOM.Iterable"
      ],
      "types": [
        "node",
        "jest",
        "@testing-library/jest-dom"
      ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
 
 
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}