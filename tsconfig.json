{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "paths": {
      "@components": [
        "./src/components/index.ts"
      ],
      "@hooks": [
        "./src/hooks/index.ts"
      ],
      "@services": [
        "./src/service/index.ts"
      ],
      "@models": [
        "./src/models/index.ts"
      ],
      "@routes": [
        "./src/routes/index.ts"
      ],
      "@pages": [
        "./src/pages/index.ts"
      ],
      "@template": [
        "./src/template/index.ts"
      ]
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}